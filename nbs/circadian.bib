	author = {Phillips, Andrew J. K. and Klerman, Elizabeth B. and Butler, James P.},
	editor = {Landolt, Hans-Peter},
	month = oct,
	year = {2017},
	pages = {e1005759},
	file = {Phillips et al. - 2017 - Modeling the adenosine system as a modulator of co.pdf:/Users/khannay/Zotero/storage/ZUS3LYMP/Phillips et al. - 2017 - Modeling the adenosine system as a modulator of co.pdf:application/pdf},
}

